# Frontend env (CRA)
# Point the frontend to the local AI proxy
REACT_APP_AI_ENDPOINT=http://localhost:8787/api/chat
REACT_APP_API_ENDPOINT=http://localhost:5000/api

# Database (PostgreSQL)
DB_USER=connect4
DB_PASSWORD=admin1234
DB_HOST=localhost
DB_PORT=5432
DB_NAME=Connec4DB_APP

# Server env (AI proxy)
# Choose provider: 'openai' or 'azure'
AI_PROVIDER=openai

# OpenAI
OPENAI_API_KEY=sk-your-key-here
OPENAI_MODEL=gpt-4o-mini

